+    userAgent: params.userAgent,
+    summary: `User ${params.email || params.userId || 'unknown'} logged in successfully`,
+    metadata: {
+      email: params.email,
+      ...params.metadata
+    },
+    tags: ['auth', 'login', 'success']
+  });
